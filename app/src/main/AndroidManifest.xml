<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="false"/>

    <application
        android:name=".AnutoApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name">

        <!-- Activity themes are changed programatically later. In order for translucent activities
             to work properly they need to have a translucent theme here. -->
        <activity
            android:name=".view.game.GameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 添加 PaymentActivity 注册 -->
        <activity
            android:name=".pay.ui.PaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault"
            android:exported="false" />

        <activity
            android:name=".view.game.MenuActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        </activity>

        <!-- 修改 ShopActivity 注册：使用透明主题，与其他弹窗活动保持一致 -->
        <activity
            android:name=".view.game.ShopActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
            android:exported="false">
        </activity>

        <activity
            android:name=".view.setting.SettingsActivity"
            android:label="@string/settings"
            android:icon="@drawable/settings"
            android:theme="@android:style/Theme.DeviceDefault">
        </activity>
        <activity
            android:name=".view.map.ChangeMapActivity"
            android:label="@string/change_map"
            android:icon="@drawable/settings"
            android:theme="@android:style/Theme.DeviceDefault">
        </activity>
        <activity
            android:name=".view.load.LoadGameActivity"
            android:label="@string/load_game"
            android:icon="@drawable/settings"
            android:theme="@android:style/Theme.DeviceDefault">
        </activity>
        <activity
            android:name=".view.stats.EnemyStatsActivity"
            android:label="@string/enemy_stats"
            android:icon="@drawable/settings"
            android:theme="@android:style/Theme.DeviceDefault">
        </activity>

        <activity
            android:name="ch.logixisland.anuto.view.leaderboard.LeaderboardActivity"
            android:theme="@android:style/Theme.Dialog" />

    </application>

</manifest>
